{
  "name": "Word Count",
  "version": "1.0",
  "manifest_version": 3,
  "description": "This extension highlights selected text and shows the word count",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": ["activeTab", "tabs"],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}
